<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.devmaker.rcapp.rcbncampinas.dialog.EditarPerfilDialogFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_weight="1.66"
            android:src="@drawable/logo_emissora" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#1879f1"
            android:textSize="26sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/facebookImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_action_facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/facebookImage"
                    android:text="Visite nossa p치gina no Facebook"
                    android:textColor="#808080"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/instagram"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/instagramImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_instagram_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/instagramImage"
                    android:text="Visite nossa p치gina no Instagram"
                    android:textColor="#808080"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/site"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/siteImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/siteImage"
                    android:text="Visite nosso Site"
                    android:textColor="#808080"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/twitter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/twitterImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_action_twitter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/twitterImage"
                    android:text="Visite nossa p치gina no Twitter"
                    android:textColor="#808080"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/telefone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/phoneImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_local_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/phoneImage"
                    android:text="Ligue para n칩s"
                    android:textColor="@color/textColorGray"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/whatsup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/whatsupImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:alpha="0.9"
                    app:srcCompat="@drawable/ic_whatsapp_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/whatsupImage"
                    android:text="Nosso Whatsapp"
                    android:textColor="@color/textColorGray"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/emailImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_send" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/emailImage"
                    android:text="Contate-nos por e-mail"
                    android:textColor="#808080"
                    android:textSize="16sp" />

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

